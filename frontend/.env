# Dictionary App Environment Variables

# API Configuration
REACT_APP_API_BASE_URL=http://127.0.0.1:8000/api/v1
REACT_APP_API_TIMEOUT=10000

# App Configuration
REACT_APP_NAME=WordExplorer
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION="Discover the beauty of words"

# Feature Flags
REACT_APP_ENABLE_WORD_OF_THE_DAY=true
REACT_APP_ENABLE_PRONUNCIATION=true
REACT_APP_ENABLE_ETYMOLOGY=true
REACT_APP_ENABLE_FAVORITES=true

# Search Configuration
REACT_APP_DEFAULT_SEARCH_LIMIT=10
REACT_APP_MAX_SEARCH_RESULTS=100
REACT_APP_DEBOUNCE_DELAY=300

# UI Configuration
REACT_APP_THEME_PRIMARY_COLOR=#1890ff
REACT_APP_THEME_BORDER_RADIUS=6

# Development
REACT_APP_DEBUG=false
REACT_APP_MOCK_API=false